<Page x:Class="Game.UI.DebugPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Game.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DebugPage">

    <Grid Background="Black">
        <Button x:Name="ActiveTraceStart" Content="ATraceStart" HorizontalAlignment="Left" Margin="36,30,0,0" VerticalAlignment="Top" Click="ActiveTraceStart_Click"/>
        <Button x:Name="ActiveTraceStop" Content="ATraceStop" HorizontalAlignment="Left" Margin="104,30,0,0" VerticalAlignment="Top" Click="ActiveTraceStop_Click"/>
        <TextBlock x:Name="ActiveTraceLocation" HorizontalAlignment="Left" Margin="172,32,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White"/>
        <Button x:Name="PassiveTraceStart" Content="PTraceStart" HorizontalAlignment="Left" Margin="36,91,0,0" VerticalAlignment="Top"/>
        <Button x:Name="PassiveTraceStop" Content="PTraceStop" HorizontalAlignment="Left" Margin="104,91,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="PassiveTraceLocation" HorizontalAlignment="Left" Margin="172,93,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White"/>

    </Grid>
</Page>
