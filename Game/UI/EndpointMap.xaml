<Page x:Class="Game.UI.EndpointMap"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Game.UI"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EndpointMap">

    <Grid Background="#FF00007F">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border x:Name="MapBorder" Grid.Column="4" Grid.Row="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="-1,0,0,0" MinWidth="1" MinHeight="1" SizeChanged="map_SizeChanged">
                <Canvas x:Name="map" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MinHeight="1" MinWidth="1" ScrollViewer.VerticalScrollBarVisibility="Disabled" Loaded="Map_Loaded">
                    <Canvas.Background>
                    <ImageBrush ImageSource="/Icons/WorldMapPixelHighRes.png"></ImageBrush>
                    </Canvas.Background>
                </Canvas>
        </Border>
    </Grid>
</Page>