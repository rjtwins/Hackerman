                    <Border BorderBrush="#FFA4A5A2" BorderThickness="2,2,2,2" Padding="10,10,0,10" Margin="2,2,2,2">
                        <StackPanel Margin="0,0,0,0">
                            <UniformGrid Columns="4" Rows="3" MinHeight="56" Margin="0,0,0,5">
                                <TextBlock>
                                    CPU Type
                                </TextBlock>
                                <TextBlock x:Name="CPUTypeTextBlock">
                                    : XXXXXXXXXXX
                                </TextBlock>
                                <TextBlock>
                                    Base Memory
                                </TextBlock>
                                <TextBlock>
                                    : xxxK
                                </TextBlock>
                                <TextBlock>
                                    Co-Processor
                                </TextBlock>
                                <TextBlock>
                                    : Installed
                                </TextBlock>
                                <TextBlock>
                                    Extended Memory
                                </TextBlock>
                                <TextBlock x:Name="ExtendedMemoryTextBlock">
                                    : xxxxxxK
                                </TextBlock>
                                <TextBlock>
                                    CPU Clock
                                </TextBlock>
                                <TextBlock x:Name="CPUClockTextBlock">
                                    : xxxMHZ
                                </TextBlock>
                                <TextBlock>
                                    Cache Memory
                                </TextBlock>
                                <TextBlock x:Name="CashMemoryTextBlock">
