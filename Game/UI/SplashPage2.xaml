                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                        NA
                    </TextBlock>
                </UniformGrid>
                <TextBlock x:Name="Stage1" Margin="0,21,0,0" Visibility="Hidden" >
                    Verifying DMI Pool Data
                </TextBlock>
                <TextBlock x:Name="Stage2" Visibility="Hidden" >
                    Boot From ATAPI CD-ROM :
                </TextBlock>
            </StackPanel>
        </Canvas>
    </Viewbox>
