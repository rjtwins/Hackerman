                            </UniformGrid>
                            <Rectangle HorizontalAlignment="Stretch" MinWidth="1" MinHeight="2" Fill="#FFA4A5A2" Margin="-10,0,0,0"/>
                            <UniformGrid Columns="4" Rows="6" MinHeight="108" Margin="0,6,0,0">
                                <TextBlock>
                                    Diskette Drive A
                                </TextBlock>
                                <TextBlock>
                                    : 2.88M, 3.5 in.
                                </TextBlock>
                                <TextBlock>
                                    Display Type
                                </TextBlock>
                                <TextBlock>
                                    : FGA/VGA
                                </TextBlock>
                                <TextBlock>
                                    Diskette Drive B
                                </TextBlock>
                                <TextBlock>
                                    : None
                                </TextBlock>
                                <TextBlock>
                                    Serial Port(s)
                                </TextBlock>
                                <TextBlock>
                                    : 3F8 2F8
                                </TextBlock>
                                <TextBlock>
                                    Pri. Master Disk
                                </TextBlock>
                                <TextBlock x:Name="PrimaryDiskTextBlock">
                                    : XXXXXXXXXXXXXX
                                </TextBlock>
                                <TextBlock>
                                    Parallel Port(s)
                                </TextBlock>
                                <TextBlock>
                                    : 378
                                </TextBlock>
                                <TextBlock>
                                    Pri. Slave Disk
                                </TextBlock>
                                <TextBlock>
                                    : None
                                </TextBlock>
                                <TextBlock>
                                    EDO DRAM at Row(s)
                                </TextBlock>
                                <TextBlock>
                                    : None
                                </TextBlock>
                                <TextBlock>
                                    Sec. Master Disk
                                </TextBlock>
                                <TextBlock>
                                    : CDROM, Mode 4
                                </TextBlock>
                                <TextBlock>
                                    SDRAM at Row(s)
                                </TextBlock>
                                <TextBlock x:Name="RamAtRowsTextBlock">
                                    : 0 1 2 3 4
                                </TextBlock>
                                <TextBlock>
                                    Sec. Slave. Disk
                                </TextBlock>
                                <TextBlock>
                                    : None
                                </TextBlock>
                                <TextBlock>
                                    L2 Cache Type
                                </TextBlock>
                                <TextBlock>
                                    : None
                                </TextBlock>

                            </UniformGrid>
                        </StackPanel>

                    </Border>
                </Border>
                <TextBlock  Margin="0,51,0,0">
                    PCI Device Listing.....
                </TextBlock>
                <UniformGrid Columns="7" Rows="5" Margin="0,0,-49,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center">
                        Bus No.
                    </TextBlock>
                    <TextBlock Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="102">
                        Device No.
                    </TextBlock>
                    <TextBlock Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="90">
                        Func No.
                    </TextBlock>
                    <TextBlock Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center">
                        Vendor ID
                    </TextBlock>
                    <TextBlock Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center">
                        Device ID
                    </TextBlock>
                    <TextBlock Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,0">
